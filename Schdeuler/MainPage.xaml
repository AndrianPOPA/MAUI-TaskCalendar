<?xml version="1.0" encoding="utf-8" ?>
<!-- 
 MainPage.xaml
 
 This is the main user interface file for the MAUI Task Calendar application.
 It defines the layout and UI elements for both the calendar and todo list functionality.
 
 The UI is organized into:
 - Tab navigation (Calendar/To Do)
 - Calendar view with Syncfusion Scheduler
 - To Do list view with active/completed tasks
 - Popup dialogs for adding/editing events and tasks
-->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Schdeuler.MainPage"
             xmlns:scheduler="clr-namespace:Syncfusion.Maui.Scheduler;assembly=Syncfusion.Maui.Scheduler"
             xmlns:local="clr-namespace:Schdeuler">

    <!-- Main layout grid with two rows: tabs and content -->
    <Grid>
        <Grid.RowDefinitions>
            <!-- Row for tab navigation -->
            <RowDefinition Height="Auto"/>
            <!-- Row for main content area -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Tab layout for switching between Calendar and To Do views -->
        <Grid Grid.Row="0" BackgroundColor="Orange">
            <Grid.ColumnDefinitions>
                <!-- Two equal columns for the two tabs -->
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Calendar Tab Button -->
            <Button x:Name="calendarTab" 
                    Grid.Column="0"
                    Text="Calendar" 
                    BackgroundColor="{Binding CalendarTabColor}"
                    TextColor="White"
                    Clicked="OnCalendarTabClicked"/>

            <!-- To Do Tab Button -->
            <Button x:Name="todoTab" 
                    Grid.Column="1"
                    Text="To Do" 
                    BackgroundColor="{Binding TodoTabColor}"
                    TextColor="White"
                    Clicked="OnTodoTabClicked"/>
        </Grid>

        <!-- Content area that changes based on selected tab -->
        <Grid Grid.Row="1">
            <!-- Calendar View - Visible when IsCalendarVisible is true -->
            <Grid x:Name="calendarView" IsVisible="{Binding IsCalendarVisible}">
                <!-- Syncfusion Scheduler control for displaying calendar events -->
                <scheduler:SfScheduler x:Name="scheduler" 
                                   View="Week"
                                   AppointmentsSource="{Binding SchedulerEventsWithDates}"
                                   Tapped="OnSchedulerTapped">
                    <!-- Configure the day view with custom time interval height -->
                    <scheduler:SfScheduler.DaysView>
                        <scheduler:SchedulerDaysView       
                               TimeIntervalHeight="40"/>
                    </scheduler:SfScheduler.DaysView>
                    <!-- Bind the scheduler to the ControlViewModel -->
                    <scheduler:SfScheduler.BindingContext>
                        <local:ControlViewModel x:Name="viewModel"></local:ControlViewModel>
                    </scheduler:SfScheduler.BindingContext>
                </scheduler:SfScheduler>

                <!-- Floating action button for adding new events -->
                <Button Text="+"
                        FontSize="24"
                        HeightRequest="60"
                        WidthRequest="60"
                        CornerRadius="30"
                        BackgroundColor="Orange"
                        TextColor="White"
                        HorizontalOptions="End"
                        VerticalOptions="End"
                        Margin="0,0,20,20"
                        Clicked="OnAddEventClicked"/>
            </Grid>

            <!-- To Do View - Visible when IsTodoVisible is true -->
            <Grid x:Name="todoView" IsVisible="{Binding IsTodoVisible}">
                <ScrollView>
                    <VerticalStackLayout Spacing="10" Padding="10">
                        <!-- Frame for active (incomplete) tasks -->
                        <Frame BackgroundColor="#FFF8F0" Padding="10" Margin="0,0,0,10">
                            <VerticalStackLayout>
                                <!-- Header for active tasks section -->
                                <Label Text="În desfășurare" 
                                       FontSize="18" 
                                       FontAttributes="Bold" 
                                       Margin="0,0,0,10"
                                       TextColor="DarkOrange"/>

                                <!-- Collection view for active tasks -->
                                <CollectionView ItemsSource="{Binding ActiveTodoEvents}"
                                EmptyView="Nu există taskuri în desfășurare">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <!-- Layout for individual task items -->
                                            <Grid Padding="10" Margin="0,3">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <!-- Task subject -->
                                                <Label Grid.Column="0" Grid.Row="0" 
                                                       Text="{Binding Subject}" 
                                                       FontAttributes="Bold"/>
                                                <!-- Task date/time and type information -->
                                                <StackLayout Grid.Column="0" Grid.Row="1" Orientation="Horizontal" Spacing="5">
                                                    <Label Text="{Binding DateTimeInfo}" 
                                                           FontSize="Small">
                                                        <!-- Style changes for dateless tasks -->
                                                        <Label.Triggers>
                                                            <DataTrigger TargetType="Label" 
                                                                        Binding="{Binding HasDate}" 
                                                                        Value="False">
                                                                <Setter Property="TextColor" Value="Gray" />
                                                                <Setter Property="FontAttributes" Value="Italic" />
                                                            </DataTrigger>
                                                        </Label.Triggers>
                                                    </Label>
                                                    <Label Text=" • " FontSize="Small"/>
                                                    <Label Text="Task" 
                                                           FontSize="Small" 
                                                           TextColor="Gray">
                                                        <!-- Show "Event" for events, "Task" for tasks -->
                                                        <Label.Triggers>
                                                            <DataTrigger TargetType="Label" 
                                                                        Binding="{Binding IsEvent}" 
                                                                        Value="True">
                                                                <Setter Property="Text" Value="Event" />
                                                                <Setter Property="TextColor" Value="DarkOrange" />
                                                            </DataTrigger>
                                                        </Label.Triggers>
                                                    </Label>
                                                </StackLayout>
                                                <!-- Checkbox for marking task as completed -->
                                                <CheckBox Grid.Column="2" Grid.RowSpan="2" 
                                                          IsChecked="{Binding IsCompleted}"
                                                          CheckedChanged="OnTodoItemCheckedChanged"/>
                                            </Grid>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </VerticalStackLayout>
                        </Frame>

                        <!-- Frame for completed tasks -->
                        <Frame BackgroundColor="#F0F0F0" Padding="10">
                            <VerticalStackLayout>
                                <!-- Header for completed tasks section -->
                                <Label Text="Terminate" 
                                       FontSize="18" 
                                       FontAttributes="Bold" 
                                       Margin="0,0,0,10"
                                       TextColor="Gray"/>

                                <!-- Collection view for completed tasks -->
                                <CollectionView ItemsSource="{Binding CompletedTodoEvents}"
                                    EmptyView="Nu există taskuri terminate">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <!-- Layout for individual completed task items -->
                                            <Grid Padding="10" Margin="0,3">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <!-- Task subject with strikethrough for completed tasks -->
                                                <Label Grid.Column="0" Grid.Row="0" 
                                                       Text="{Binding Subject}" 
                                                       FontAttributes="Bold"
                                                       TextColor="Gray"
                                                       TextDecorations="Strikethrough"/>
                                                <!-- Task date/time and type information -->
                                                <StackLayout Grid.Column="0" Grid.Row="1" Orientation="Horizontal" Spacing="5">
                                                    <Label Text="{Binding DateTimeInfo}" 
                                                           FontSize="Small"
                                                           TextColor="Gray">
                                                        <!-- Style changes for dateless tasks -->
                                                        <Label.Triggers>
                                                            <DataTrigger TargetType="Label" 
                                                                        Binding="{Binding HasDate}" 
                                                                        Value="False">
                                                                <Setter Property="FontAttributes" Value="Italic" />
                                                            </DataTrigger>
                                                        </Label.Triggers>
                                                    </Label>
                                                    <Label Text=" • " FontSize="Small" TextColor="Gray"/>
                                                    <Label Text="Task" 
                                                           FontSize="Small" 
                                                           TextColor="Gray">
                                                        <!-- Show "Event" for events, "Task" for tasks -->
                                                        <Label.Triggers>
                                                            <DataTrigger TargetType="Label" 
                                                                        Binding="{Binding IsEvent}" 
                                                                        Value="True">
                                                                <Setter Property="Text" Value="Event" />
                                                            </DataTrigger>
                                                        </Label.Triggers>
                                                    </Label>
                                                </StackLayout>
                                                <!-- Checkbox for marking task as active (uncompleted) -->
                                                <CheckBox Grid.Column="2" Grid.RowSpan="2" 
                          IsChecked="{Binding IsCompleted}"
                          CheckedChanged="OnTodoItemCheckedChanged"/>
                                            </Grid>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </VerticalStackLayout>
                        </Frame>
                    </VerticalStackLayout>
                </ScrollView>

                <!-- Floating action button for adding new tasks -->
                <Button Text="+"
                        FontSize="24"
                        HeightRequest="60"
                        WidthRequest="60"
                        CornerRadius="30"
                        BackgroundColor="Orange"
                        TextColor="White"
                        HorizontalOptions="End"
                        VerticalOptions="End"
                        Margin="0,0,20,20"
                        Clicked="OnAddEventClicked"/>
            </Grid>
        </Grid>

        <!-- Popup dialog for adding new events or tasks -->
        <Border x:Name="eventPopup"
            IsVisible="False"
            BackgroundColor="White"
            StrokeThickness="1"
            Stroke="Gray"
            StrokeShape="RoundRectangle 10"
            WidthRequest="330"
            HeightRequest="500"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Grid.RowSpan="2">
            <Grid Padding="20" RowSpacing="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Popup header with title and close button -->
                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Label Text="Adaugă nou" 
                       Grid.Column="0"
                       FontSize="18" 
                       FontAttributes="Bold"
                       VerticalOptions="Center"
                       HorizontalOptions="Start"/>

                    <Button Text="X"
                        Grid.Column="1"
                        FontSize="16"
                        FontAttributes="Bold"
                        WidthRequest="44"
                        HeightRequest="44"
                        CornerRadius="22"
                        BackgroundColor="LightGray"
                        TextColor="Black"
                        Margin="10,0,0,0"
                        Padding="0"
                        Clicked="OnCancelClicked"/>
                </Grid>

                <!-- Toggle buttons for switching between Event and Task mode -->
                <HorizontalStackLayout Grid.Row="1" Spacing="10" HorizontalOptions="Center">
                    <Button x:Name="eventToggleButton"
                        Text="Eveniment" 
                        BackgroundColor="Orange"
                        TextColor="White"
                        WidthRequest="120"
                        Clicked="OnEventToggleClicked"/>

                    <Button x:Name="taskToggleButton"
                        Text="Task" 
                        BackgroundColor="LightGray"
                        TextColor="Black"
                        WidthRequest="120"
                        Clicked="OnTaskToggleClicked"/>
                </HorizontalStackLayout>

                <!-- Subject input field -->
                <Label Text="Subiect:" 
                   Grid.Row="2"/>
                <Entry x:Name="subjectEntry" 
                   Placeholder="Introduceți subiectul"
                   Grid.Row="3"/>

                <!-- Date/time selection for events -->
                <StackLayout x:Name="dateTimeSection" Grid.Row="4" Grid.RowSpan="4">
                    <Label Text="Data și ora de început:" />
                    <HorizontalStackLayout Spacing="10">
                        <DatePicker x:Name="startDatePicker" 
                                HorizontalOptions="Start"/>
                        <TimePicker x:Name="startTimePicker" 
                                HorizontalOptions="End"/>
                    </HorizontalStackLayout>

                    <Label Text="Data și ora de sfârșit:" 
                       Margin="0,15,0,0"/>
                    <HorizontalStackLayout Spacing="10">
                        <DatePicker x:Name="endDatePicker" 
                                HorizontalOptions="Start"/>
                        <TimePicker x:Name="endTimePicker" 
                                HorizontalOptions="End"/>
                    </HorizontalStackLayout>
                </StackLayout>

                <!-- Checkbox for tasks that can optionally have dates -->
                <CheckBox x:Name="hasDateCheckbox" 
                      Grid.Row="4"
                      IsVisible="False"
                      IsChecked="False"
                      CheckedChanged="OnHasDateCheckChanged"/>
                <Label Text="Include dată și oră" 
                   Grid.Row="4" 
                   Margin="50,0,0,0"
                   IsVisible="False"
                   x:Name="hasDateLabel"/>

                <!-- Date/time selection for tasks (when hasDate is checked) -->
                <StackLayout x:Name="taskDateTimeSection" 
                         Grid.Row="5" 
                         Grid.RowSpan="3" 
                         IsVisible="False">
                    <Label Text="Data și ora de început:" />
                    <HorizontalStackLayout Spacing="10">
                        <DatePicker x:Name="taskStartDatePicker" 
                                HorizontalOptions="Start"/>
                        <TimePicker x:Name="taskStartTimePicker" 
                                HorizontalOptions="End"/>
                    </HorizontalStackLayout>

                    <Label Text="Data și ora de sfârșit:" 
                       Margin="0,15,0,0"/>
                    <HorizontalStackLayout Spacing="10">
                        <DatePicker x:Name="taskEndDatePicker" 
                                HorizontalOptions="Start"/>
                        <TimePicker x:Name="taskEndTimePicker" 
                                HorizontalOptions="End"/>
                    </HorizontalStackLayout>
                </StackLayout>

                <!-- Save button -->
                <Button Grid.Row="8" 
                    Text="Salvează" 
                    BackgroundColor="Orange"
                    TextColor="White"
                    HeightRequest="50"
                    Margin="0,10,0,0"
                    Clicked="OnSaveEventClicked"/>
            </Grid>
        </Border>

        <!-- Popup dialog for editing existing events -->
        <Border x:Name="editEventPopup"
                IsVisible="False"
                BackgroundColor="White"
                StrokeThickness="1"
                Stroke="Gray"
                StrokeShape="RoundRectangle 10"
                WidthRequest="330"
                HeightRequest="450"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Grid.RowSpan="2">
            <Grid Padding="20" RowSpacing="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Popup header with title and close button -->
                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Label Text="Editează eveniment" 
                           Grid.Column="0"
                           FontSize="18" 
                           FontAttributes="Bold"
                           VerticalOptions="Center"
                           HorizontalOptions="Start"/>

                    <Button Text="X"
                           Grid.Column="1"
                           FontSize="16"
                           FontAttributes="Bold"
                           WidthRequest="44"
                           HeightRequest="44"
                           CornerRadius="22"
                           BackgroundColor="LightGray"
                           TextColor="Black"
                           Margin="10,0,0,0"
                           Padding="0"
                           Clicked="OnCancelEditClicked"/>
                </Grid>

                <!-- Subject input field -->
                <Label Text="Subiect:" 
                       Grid.Row="1"/>
                <Entry x:Name="editSubjectEntry" 
                       Placeholder="Introduceți subiectul"
                       Grid.Row="2"/>

                <!-- Start date/time selection -->
                <Label Text="Data și ora de început:" 
                       Grid.Row="3"/>
                <HorizontalStackLayout Grid.Row="4" Spacing="10">
                    <DatePicker x:Name="editStartDatePicker" 
                                HorizontalOptions="Start"/>
                    <TimePicker x:Name="editStartTimePicker" 
                                HorizontalOptions="End"/>
                </HorizontalStackLayout>

                <!-- End date/time selection -->
                <Label Text="Data și ora de sfârșit:" 
                       Grid.Row="5"/>
                <HorizontalStackLayout Grid.Row="6" Spacing="10">
                    <DatePicker x:Name="editEndDatePicker" 
                                HorizontalOptions="Start"/>
                    <TimePicker x:Name="editEndTimePicker" 
                                HorizontalOptions="End"/>
                </HorizontalStackLayout>

                <!-- Action buttons: Delete and Update -->
                <Grid Grid.Row="7" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0"
                            Text="Șterge" 
                            BackgroundColor="Red"
                            TextColor="White"
                            HeightRequest="50"
                            Margin="0,0,5,0"
                            Clicked="OnDeleteEventClicked"/>
                    <Button Grid.Column="1"
                            Text="Actualizează" 
                            BackgroundColor="Orange"
                            TextColor="White"
                            HeightRequest="50"
                            Margin="5,0,0,0"
                            Clicked="OnUpdateEventClicked"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</ContentPage>